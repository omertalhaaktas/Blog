@model HomeViewModel
@{
    ViewBag.Title = "Ana Sayfa";
}

<div class="container-fluid paddding mb-5">
    <div class="row mx-0">
        <div class="col-md-6 col-12 paddding animate-box" data-animate-effect="fadeIn">
            @if(cache.NewContents != null && cache.NewContents.Count() > 0)
            {
                foreach (var item in cache.NewContents.Take(1))
                {
                    <div class="fh5co_suceefh5co_height">

                        @if (item.Media != null)
                        {
                            <img src="@item.Media.MediaUrl" alt="img" />

                        }
                        else
                        {
                            <img src="~/_assets/images/nick-karvounis-78711.jpg" alt="img" />

                        }

                        <div class="fh5co_suceefh5co_height_position_absolute"></div>
                        <div class="fh5co_suceefh5co_height_position_absolute_font">
                            <div class="">
                                <a href="@Url.Action("Index","Content", new {slug = item.Slug})" class="color_fff">
                                    <i class="fa fa-clock-o"></i> @item.PublishDate.ToString("dd MMM yyyy")
                                </a>
                            </div>
                            <div class=""><a href="single.html" class="fh5co_good_font"> @item.Title </a></div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="col-md-6">
            <div class="row">
                @if (cache.NewContents != null && cache.NewContents.Count() > 0)
                {
                    foreach (var item in cache.NewContents.Skip(1).Take(4))
                    {
                        <div class="col-md-6 col-6 paddding animate-box" data-animate-effect="fadeIn">
                            <div class="fh5co_suceefh5co_height_2">
                                @if (item.Media != null)
                                {
                                    <img src="@item.Media.MediaUrl" alt="img" />

                                }
                                else
                                {
                                    <img src="~/_assets/images/science-578x362.jpg" alt="img" />

                                }

                                <img src="~/_assets/images/science-578x362.jpg" alt="img" />
                                <div class="fh5co_suceefh5co_height_position_absolute"></div>
                                <div class="fh5co_suceefh5co_height_position_absolute_font_2">
                                    <div class="">
                                        <a href="@Url.Action("Index","Content", new {slug = item.Slug})" class="color_fff">
                                            <i class="fa fa-clock-o"></i>
                                            @item.PublishDate.ToString("dd MMM yyyy")
                                        </a>
                                    </div>
                                    <div class=""><a href="single.html" class="fh5co_good_font_2"> @item.Title </a></div>
                                </div>
                            </div>

                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Editörün Seçtikleri</div>
        </div>
        <div class="owl-carousel owl-theme js" id="slider1">

            @foreach (var item in cache.NewContents.Skip(5).Take(8))
            {
                <div class="item px-2">
                    <div class="fh5co_latest_trading_img_position_relative">
                        <div class="fh5co_latest_trading_img">

                            @if (item.Media != null)
                            {
                                <img src="@item.Media.MediaUrl" alt="@item.Media.Alt" class="fh5co_img_special_relative" />

                            }
                            else
                            {
                                <img src="~/_assets/images/allef-vinicius-108153.jpg" alt=""
                             class="fh5co_img_special_relative" />

                            }

                            <img src="~/_assets/images/allef-vinicius-108153.jpg" alt=""
                             class="fh5co_img_special_relative" />
                        </div>
                        <div class="fh5co_latest_trading_img_position_absolute"></div>
                        <div class="fh5co_latest_trading_img_position_absolute_1">
                            <a href="@Url.Action("Index","Content", new {slug = item.Slug})" class="text-white"> @item.Title </a>
                            <div class="fh5co_latest_trading_date_and_name_color">

                                @if (item.Author != null)
                                {
                                    @item.Author.FullName <span></span>
                                } @item.PublishDate.ToString("dd MMM yyyy")
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Son Eklenenler</div>
                </div>

                @foreach (var item in cache.NewContents.Skip(13).Take(12))
                {
                    <div class="row pb-4">
                        <div class="col-md-5">
                            <div class="fh5co_hover_news_img">

                                @if (item.Media != null)
                                {
                                    <img src="@item.Media.MediaUrl" alt="@item.Media.Alt" />

                                }
                                else
                                {
                                    <img src="~/_assets/images/nathan-mcbride-229637.jpg" alt="" />

                                }

                                <div></div>
                            </div>
                        </div>
                        <div class="col-md-7 animate-box">
                            <a href="@Url.Action("Index","Content", new {slug = item.Slug})" class="fh5co_magna py-2">
                                @item.Title
                            </a> <a href="@Url.Action("Index","Content", new {slug = item.Slug})" class="fh5co_mini_time py-3">

                                @if (item.Author != null)
                                {
                                    @item.Author.FullName <span></span>
                                }
                                @item.PublishDate.ToString("dd MMM yyyy")

                            </a>
                            <div class="fh5co_consectetur">
                                @item.MetaDescription
                            </div>
                        </div>
                    </div>
                }
            </div>
            @await Html.PartialAsync("_SideBar")
        </div>

    </div>
</div>